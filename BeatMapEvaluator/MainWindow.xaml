<Window x:Class="BeatMapEvaluator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Map Evaluator"
        Height="650" Width="1100"
        MinHeight="520"
        MinWidth="864"
        Background="#303030"
        ResizeMode="CanResize" Closing="onAppQuit">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                Background="#5F5DA6">
        </Border>

        <StackPanel Grid.Column="2"
                    VerticalAlignment="Center"
                    FlowDirection="LeftToRight"
                    Orientation="Horizontal"
                    Margin="6">

            <Button x:Name="diffButton_Easy" Style="{StaticResource DiffButton}"
                    Background="#0ee095" Content="Easy"/>

            <Button x:Name="diffButton_Normal" Style="{StaticResource DiffButton}"
                    Background="#31B9FB" Content="Normal"/>

            <Button x:Name="diffButton_Hard" Style="{StaticResource DiffButton}"
                    Background="#ECB627" Content="Hard"/>

            <Button x:Name="diffButton_Expert" Style="{StaticResource DiffButton}"
                    Background="#FA1055" Content="Expert"/>

            <Button x:Name="diffButton_ExpertPlus" Style="{StaticResource DiffButton}" 
                    Background="#FFAE17DD" Content="Expert+"/>


        </StackPanel>

        <!-- Main Panel -->
        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <!-- Directive Panel -->
            <Border Background="#262626"
                    Margin="6">

            </Border>

            <!-- Console Log -->
            <Border Background="#0D0D0D"
                    Margin="6, 0, 6, 6"
                    Grid.Row="2">
                <TextBlock x:Name="ConsoleText" 
                           Background="Transparent"
                           Foreground="#FAFAFA"
                           FontSize="16"
                           Padding="4"
                           Text="Console Log:"></TextBlock>
            </Border>
        </Grid>

        <!-- Side Bar -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Button Panel -->
            <StackPanel Background="#303030"
                        Margin="6,6,0,0">

                <Button Grid.Column="0"
                        Content="Evaluate !bsr"
                        Height="50" Margin="0"
                        Background="#404040"
                        Foreground="#FAFAFA"
                        FontSize="24" Click="evaluateCode_OnClick">
                </Button>

            </StackPanel>

            <!-- Queue List -->
            <ListView x:Name="QueueList" Grid.Row="2"
                      Background="#262626"
                      Margin="6,6,0,6"
                      BorderThickness="0"
                      HorizontalContentAlignment="Center"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ItemsSource="{Binding MapQueue}"
                      ItemContainerStyle="{StaticResource QueuedMap}">
            </ListView>
        </Grid>

    </Grid>

</Window>
